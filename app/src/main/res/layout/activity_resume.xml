<!--
 Nombre del proyecto: FreeTime
 Autores: Lucas Baruja, Leonardo Duarte, Ezequiel Arce, Iván Samudio
 Descripción: Layout para reanudar una actividad pausada.
 Fecha de creación: 04/11/2024
 Forma de utilizar: Estructura la vista que permite al usuario retomar actividades.
-->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título de la pantalla -->
        <TextView
            android:id="@+id/tv_summary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_title"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:textColor="@android:color/black"/>

        <!-- Navegador de días -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/button_previous_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_previous_day_text"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_summary_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summary_day_lunes"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/button_next_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_next_day_text"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Sección de Mañana -->
        <TextView
            android:id="@+id/tv_morning_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/morning_section"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:id="@+id/ll_morning_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Sección de Tarde -->
        <TextView
            android:id="@+id/tv_afternoon_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/afternoon_section"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:id="@+id/ll_afternoon_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Sección de Noche -->
        <TextView
            android:id="@+id/tv_night_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/night_section"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:id="@+id/ll_night_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Botón confirmar -->
        <Button
            android:id="@+id/button_confirm_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_button_summary"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>

        <!-- Texto de modificación -->
        <Button
            android:id="@+id/button_modify_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_activity_prompt"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_italic"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
