<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleActivityQuestion"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="@string/title"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/cardview_default_elevation"
        android:layout_marginBottom="@dimen/cardview_default_elevation"
        />

    <!-- Descripción breve debajo del título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionActivityQuestion"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="@string/description"
        android:fontFamily="@font/poppins"
        android:textStyle="normal"
        android:layout_marginTop="@dimen/cardview_default_elevation"
        android:layout_marginBottom="@dimen/cardview_default_elevation"
        />

    <!-- Espacio para separar elementos visualmente -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp">
    </Space>

    <!-- Campo de texto para ingresar el nombre de la actividad -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_activity_name"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:inputType="text"
        android:id="@+id/activityNameActivityQuestion"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:background="@color/FreeTimeGreen"
        android:layout_marginTop="@dimen/cardview_default_elevation"
        android:layout_marginBottom="@dimen/cardview_default_elevation"
        android:padding="10dp"
        />

    <!-- Espacio para separar elementos visualmente -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp">
    </Space>

    <!-- Título que indica la sección de selección de días -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/daysActivityQuestion"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="@string/days_title"
        android:fontFamily="@font/poppins"
        android:textStyle="normal"
        />

    <!-- Espacio para separar elementos visualmente -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp">
    </Space>

    <!-- Botones circulares para seleccionar los días de la semana -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="2dp">

        <!-- Botón para seleccionar el día lunes -->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/lunesActivityQuestion"
            android:text="@string/lunes"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_green"
            android:gravity="center"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:minWidth="60dp"/>

        <!-- Botón para martes -->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/martesActivityQuestion"
            android:text="@string/martes"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_green"
            android:gravity="center"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <!-- Botón para miércoles -->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/miercolesActivityQuestion"
            android:text="@string/miercoles"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_green"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <!-- Botón para jueves -->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/juevesActivityQuestion"
            android:text="@string/jueves"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_green"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <!-- Botón para viernes -->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/viernesActivityQuestion"
            android:text="@string/viernes"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_green"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <!-- Botón para sábado -->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/sabadoActivityQuestion"
            android:text="@string/sabado"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_green"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <!-- Botón para domingo -->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/domingoActivityQuestion"
            android:text="@string/domingo"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_green"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Espacio para separar elementos visualmente -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp">
    </Space>

    <!-- Título para la sección de selección de hora -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeActivityQuestion"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="@string/time_title"
        android:fontFamily="@font/poppins"
        android:textStyle="normal"
        />

    <!-- Selector de tiempo con un TimePicker a la izquierda, "A" en el centro, y otro TimePicker a la derecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Selector de hora de inicio -->
        <TimePicker
            android:id="@+id/start_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_weight="1"/>

        <!-- Texto "A" en el centro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/A"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"/>

        <!-- Selector de hora de fin -->
        <TimePicker
            android:id="@+id/end_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Espacio para separar elementos visualmente -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp">
    </Space>

    <!-- Checkbox para marcar si la actividad es inamovible -->
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inamovible_checkbox"
        android:text="@string/is_fixed_label"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <!-- Espacio para separar elementos visualmente -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp">
    </Space>

    <!-- Texto explicativo sobre la actividad inamovible -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explanation_fixed"
        android:fontFamily="@font/poppins"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textSize="15sp"/>

    <!-- Espacio para separar elementos visualmente -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp">
    </Space>

    <!-- Botón para guardar la actividad -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_activity"
        android:text="@string/save_activity"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"/>

</LinearLayout>
